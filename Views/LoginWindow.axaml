<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApp.ViewModels"
        xmlns:conv="using:Avalonia.Data.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="420"
        x:Class="AvaloniaApp.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Title="Sign in"
        Width="400" Height="420"
        MinWidth="360" MinHeight="380"
        WindowStartupLocation="CenterScreen"
        CanResize="True"
        Background="#1a1a2e">

    <Design.DataContext>
        <vm:LoginWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="40" VerticalAlignment="Center" Spacing="24">
            <TextBlock Text="Welcome back"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Sign in to continue"
                       FontSize="14"
                       Foreground="#a0a0a0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <TextBox Watermark="Username"
                     Text="{Binding Username}"
                     Padding="12,10"
                     FontSize="14"/>

            <TextBox Watermark="Password"
                     PasswordChar="â—"
                     Text="{Binding Password}"
                     Padding="12,10"
                     FontSize="14"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       IsVisible="{Binding ErrorMessage, Converter={x:Static conv:StringConverters.IsNotNullOrEmpty}}"
                       Foreground="#ff6b6b"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,-4,0,0"/>

            <Button Content="Sign in"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Stretch"
                    Padding="0,12"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Margin="0,8,0,0"/>
    </StackPanel>
</Window>

